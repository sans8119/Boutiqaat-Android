<?xml version="1.0" encoding="utf-8"?>

<!--UI xml for single row of Catogories screen-->

<layout xmlns:bind="http://schemas.android.com/apk/res/android">

    <data class="RowItemBinding">

        <variable
            name="usersrecentmedia"
            type="com.boutiqaat.android.boutiqaat.datasource.db.datamodel.UsersRecentMediaModel" />
    </data>

    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <Space
                android:layout_width="match_parent"
                android:layout_height="3dp" />

            <ImageView
                android:id="@+id/card_view_image"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:scaleType="centerCrop"
                bind:setImageBitmap="@{usersrecentmedia.thumbNailImg}" />

            <TextView
                android:id="@+id/card_view_image_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:text="@{usersrecentmedia.caption.text ?? usersrecentmedia.id}"
                android:textSize="20dp" />


        </LinearLayout>

    </android.support.v7.widget.CardView>


</layout>